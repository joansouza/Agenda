<%- include('includes/head') %> <%- include('includes/nave') %>
<div class="conteiner">
  <div class="row">
    <div class="col-lg-2"> </div>
      <div class="col-lg-8 my-3">
        <h1 class="display-1 text-center">Agenda</h1>  
        <p class="text-center lead">seus contatos estão abaixo</p>
        <%-include ('includes/messeges')%>
<%if(contatos.length > 0 ) { %>
        <div class="class responsive-table my-3">
          <table class="table">
            <% contatos.forEach(contato => { %>
              <tr>
                <td><%= contato.nome %></td>
                <td><%= contato.sobrenome %></td>
                <td><%= contato.email %></td>
                <td><%= contato.telefone %></td>
                <td><a href="/contato/index/<%= contato._id %>">editar</a></td>
                <td><a class=" text-danger"href="/contato/delete/<%= contato._id %>">excluir</a></td>
              </tr>

          <%  }); %>
            
          </table>
        </div>
        <% } else { %>
<p class="class text-center lead">Não existe Contatos na sua agenda</p>
          <% } %>
      </div>
        <div class="col-lg-2"> </div> 
  </div>
</div>
<%- include('includes/footer') %>
